{
  "watch": [{
    "profile": "iis",
    "paths": ["app", "assets"],
    "action": {
      "type": "mirror",
      "destination": "../deploy"
    }
  }, {
    "profile": "iis",
    "paths": ["app/config", "app/controllers", "app/helpers", "app/system"],
    "mask": "*.js",
    "exclude": ["app/system/adapters/apache"],
    "action": {
      "type": "exec",
      "command": "node build iis"
    }
  }, {
    "profile": "apache",
    "paths": ["app/config", "app/controllers", "app/helpers", "app/system"],
    "mask": "*.js",
    "exclude": ["app/system/adapters/iis", "app/system/adapters/activex"],
    "action": {
      "type": "exec",
      "command": "node build apache"
    }
  }, {
    "profile": "node",
    "paths": ["node-server"],
    "mask": "*.js",
    "exclude": ["node-server/node_modules"],
    "action": {
      "type": "kill",
      "pidfile": "../server.pid"
    }
  }]
}