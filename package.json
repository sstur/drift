{
  "name": "drift",
  "version": "0.8.0",
  "description": "Synchronous-style Server-side JS",
  "main": "index.js",
  "files": [
    "interfaces/",
    "interfaces/",
    "server/"
  ],
  "scripts": {
    "check-format": "prettier --check \"**/*.js\"",
    "format": "prettier --write \"**/*.js\"",
    "lint": "eslint . --max-warnings 0",
    "test-src": "mocha test",
    "test": "npm run lint && npm run test-src"
