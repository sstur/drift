{
  "name": "drift",
  "version": "0.10.3",
  "description": "Synchronous-style Server-side JS",
  "main": "index.js",
  "files": [
    "server/"
  ],
  "scripts": {
    "check-format": "prettier --check \"**/*.js\"",
    "format": "prettier --write \"**/*.js\"",
    "lint": "eslint . --max-warnings 0",
    "test-src": "mocha test",
    "test": "npm run lint && npm run test-src"
  },
  "dependencies": {
    "@babel/core": "^7.12.10",
    "@babel/plugin-transform-flow-strip-types": "^7.12.10",
    "@babel/plugin-transform-react-jsx": "^7.12.11",
    "@babel/plugin-transform-typescript": "^7.12.1",
    "babel-preset-latest-node": "^5.2.0",
    "fibers": "^4.0.2",
    "formidable": "~1.0.11",
    "mkdirp": "^0.5.0",
    "node-hook": "^0.1.0",
    "rimraf": "^2.4.3"
  },
  "devDependencies": {
    "babel-eslint": "^6.1.2",
    "eslint": "^3.0.1",
    "eslint-plugin-babel": "^3.3.0",
    "eslint-plugin-flow-vars": "^0.4.0",
    "expect.js": "^0.3.1",
    "mocha": "^2.5.3",
    "prettier": "^1.19.1",
    "request": "~2.10.0"
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all",
    "arrowParens": "always",
    "endOfLine": "lf"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/sstur/drift"
  },
  "author": "sstur",
  "license": "BSD-2-Clause"
}
