  "dependencies": {
    "babel-core": "^6.3.26",
    "babel-plugin-transform-class-properties": "^6.3.13",
    "babel-preset-es2015": "^6.9.0",
    "babel-preset-es2015-loose": "^7.0.0",
    "babel-preset-react": "^6.3.13",
    "babel-preset-stage-2": "^6.3.13",
    "fibers": "^4.0.2",
    "formidable": "~1.0.11",
    "mkdirp": "^0.5.0",
    "node-hook": "^0.1.0",
    "rimraf": "^2.4.3"
  },
  "devDependencies": {
    "babel-eslint": "^6.1.2",
    "eslint": "^4.18.2",
    "eslint-plugin-babel": "^3.3.0",
    "eslint-plugin-flow-vars": "^0.4.0",
    "expect.js": "^0.3.1",
    "mocha": "^2.5.3",
    "prettier": "^1.19.1",
    "request": "~2.10.0"
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all",
