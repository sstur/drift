{
  "watch": [{
    "profile": "iis",
    "paths": ["app", "assets"],
    "action": {
      "type": "copy",
      "destination": "../deploy"
    }
  }, {
    "profile": "node",
    "paths": ["node-server"],
    "mask": "*.js",
    "exclude": ["node-server/node_modules"],
    "action": {
      "type": "kill",
      "pidfile": "../server.pid"
    }
  }]
}